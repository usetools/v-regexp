{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "rootDir": "./src",
    "lib": ["es2017", "dom"],
    "paths": {
      "@v-regexp": ["./src"],
      "@v-regexp/*": ["./src/*"],
    },
    "declaration": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "outDir": "lib",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"],
  "compileOnSave": false
}